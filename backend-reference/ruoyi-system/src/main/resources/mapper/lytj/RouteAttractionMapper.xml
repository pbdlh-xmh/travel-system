<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.lytj.mapper.RouteAttractionMapper">
    
    <resultMap type="RouteAttraction" id="RouteAttractionResult">
        <result property="id"    column="id"    />
        <result property="routeId"    column="route_id"    />
        <result property="attractionId"    column="attraction_id"    />
    </resultMap>

    <sql id="selectRouteAttractionVo">
        select id, route_id, attraction_id from route_attraction
    </sql>

    <select id="selectRouteAttractionList" parameterType="RouteAttraction" resultMap="RouteAttractionResult">
        <include refid="selectRouteAttractionVo"/>
        <where>  
            <if test="routeId != null  and routeId != ''"> and route_id = #{routeId}</if>
            <if test="attractionId != null  and attractionId != ''"> and attraction_id = #{attractionId}</if>
        </where>
    </select>
    
    <select id="selectRouteAttractionById" parameterType="String" resultMap="RouteAttractionResult">
        <include refid="selectRouteAttractionVo"/>
        where id = #{id}
    </select>

    <insert id="insertRouteAttraction" parameterType="RouteAttraction" useGeneratedKeys="true" keyProperty="id">
        insert into route_attraction
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="routeId != null and routeId != ''">route_id,</if>
            <if test="attractionId != null and attractionId != ''">attraction_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="routeId != null and routeId != ''">#{routeId},</if>
            <if test="attractionId != null and attractionId != ''">#{attractionId},</if>
         </trim>
    </insert>

    <update id="updateRouteAttraction" parameterType="RouteAttraction">
        update route_attraction
        <trim prefix="SET" suffixOverrides=",">
            <if test="routeId != null and routeId != ''">route_id = #{routeId},</if>
            <if test="attractionId != null and attractionId != ''">attraction_id = #{attractionId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRouteAttractionById" parameterType="String">
        delete from route_attraction where id = #{id}
    </delete>

    <delete id="deleteRouteAttractionByIds" parameterType="String">
        delete from route_attraction where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>